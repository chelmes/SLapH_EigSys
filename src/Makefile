################################################################################
#
# Makefile to compile and link C programs with MPI subroutines
#
# Version valid for Linux machines with MPICH
#
# "make" compiles and links the specified main programs and modules,
# using the specified libraries (if any), and produces the executables
#
# "make clean" removes all files generated by "make"
#
# Dependencies on included files are automatically taken care of
#
################################################################################
all: rmxeq mkdep mkxeq
.PHONY: all

# main programs and modules to be compiled
#-include ${SLEPC_DIR}/conf/slepc_common
#-include ${PETSC_DIR}/conf/petscvariables

MAIN = ev_ts

GENERAL = config_utils eigensystem io io_utils parastruct read_write recover_spec shell_matop sourceshape statistics 
MODULES = $(GENERAL)

# search path for modules
MDIR = ../modules
VPATH = .:$(MDIR)

# Logging option (-mpilog or -mpitrace or -mpianim)
LOGOPTION =

# additional include directories
# PETSc and SLEPc include paths
SLEPC_INCLUDE = /hiskp2/helmes/programm_libs/slepc-3.4.2/arch-linux2-cxx-opt/include \
		/hiskp2/helmes/programm_libs/slepc-3.4.2/include \
		/hiskp2/helmes/programm_libs/slepc-3.4.2

PETSC_INCLUDE = /hiskp2/helmes/programm_libs/petsc-3.4.2/include \
		/hiskp2/helmes/programm_libs/petsc-3.4.2/arch-linux2-cxx-opt/include \
		/hiskp2/helmes/programm_libs/petsc-3.4.2 \
		/hiskp2/helmes/programm_libs/petsc-3.4.2/include/mpiuni 

INCPATH = $(PETSC_INCLUDE) $(SLEPC_INCLUDE) /hiskp2/helmes/programm_libs/lime-1.3.2/include \
	  /hiskp2/helmes/programm_libs/eigen-3.2.0 ../include /usr/include 

# additional libraries
LIBS = lime mpich opa mpl pthread rdmacm ibverbs ibumad rt gfortran slepc petsc lapack blas pthread m gfortran m quadmath m stdc++ dl 

SLEPC_LIBPATH = /hiskp2/helmes/programm_libs/slepc-3.4.2/arch-linux2-cxx-opt-static/lib
PETSC_LIBPATH = /hiskp2/helmes/programm_libs/petsc-3.4.2/arch-linux2-cxx-opt-static/lib

LIBPATH = /hiskp2/helmes/programm_libs/lime-1.3.2/lib  /usr/lib/lapack /usr/lib/libblas /usr/lib $(PETSC_LIBPATH) $(SLEPC_LIBPATH) /usr/lib/gcc/x86_64-linux-gnu/4.6 /usr/lib/x86_64-linux-gnu /lib/x86_64-linux-gnu 


# scheduling and optimization options
CFLAGS = -std=c++0x -DEIGEN_DONT_PARALLELIZE -O2

############################## do not change ###################################

SHELL=/bin/bash
CC=g++
CLINKER=$(CC)

PGMS= $(MAIN) $(MODULES)

-include $(addsuffix .d,$(PGMS))


# rule to make dependencies

$(addsuffix .d,$(PGMS)): %.d: %.cpp Makefile
	@ $(CC) -ansi $< -MM $(addprefix -I,$(INCPATH)) -o $@ $(CFLAGS)


# rule to compile source programs

$(addsuffix .o,$(PGMS)): %.o: %.cpp Makefile
	$(CC) $< -c $(CFLAGS) $(LOGOPTION) $(addprefix -I,$(INCPATH)) -static


# rule to link object files

$(MAIN): %: %.o $(addsuffix .o,$(MODULES)) Makefile
	$(CLINKER) $< $(addsuffix .o,$(MODULES)) $(CFLAGS) $(LOGOPTION) \
	   -static $(addprefix -L,$(LIBPATH)) $(addprefix -l,$(LIBS)) -lm -o $@

# produce executables

mkxeq: $(MAIN)


# remove old executables

rmxeq:
	@ -rm -f $(MAIN); \
        echo "delete old executables"


# make dependencies

mkdep:  $(addsuffix .d,$(PGMS))
	@ echo "generate tables of dependencies"


# clean directory

myclean:
	@ -rm -rf *.d *.o *.alog *.clog *.slog $(MAIN)
.PHONY: myclean

################################################################################
