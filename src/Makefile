############################## do not change ###################################

SHELL=/bin/bash
CC=g++
CLINKER=$(CC)

PGMS= $(MAIN) $(MODULES)

-include $(addsuffix .d,$(PGMS))


# rule to make dependencies

$(addsuffix .d,$(PGMS)): %.d: %.cpp Makefile
	@ $(CC) -ansi $< -MM $(addprefix -I,$(INCPATH)) -o $@ $(CFLAGS)


# rule to compile source programs

$(addsuffix .o,$(PGMS)): %.o: %.cpp Makefile
